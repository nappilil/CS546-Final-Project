<div class="form">
    <h1>{{pageTitle}}</h1>
    <div class="newList">
        <form action="/groceryLists/new" method="POST" class="newList-form" id="newList">
            <label for="groceryName">Grocery List Name:</label><br>
            <input type="text" id="groceryName" name="groceryName" value="{{groceryList.groceryName}}"><br>
            <label for="listType">List Type:</label><br>
            <select id="listType" name="listType">
                <option value="community">Community</option>
                <option value="special occasion">Special Occasion</option>
                <option value="personal">Personal</option>
            </select><br>
            <input type="hidden" id="userId" name="userId" value="{{groceryList.userId}}">
            <input type="hidden" id="householdName" name="householdName" value="{{groceryList.householdName}}">
            <input type="submit" value="Create List">
        </form>
    </div>
    {{#if hasErrors}}
    <ul class="error-list">
        {{#each errors}}
        <li>
            {{this}}
        </li>
        {{/each}}
    </ul>
    {{else}}
    <a href="/items/createItem">Add New Item</a>
    {{/if}}
</div>